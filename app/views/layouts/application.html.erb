<!DOCTYPE html>
<html>
<head>
  <title>Postapp</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag    'style', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag    'animate', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag "bootstrap", "data-turbolinks-track" => true  %>
</head>
<body class="">
  <div id="wrapper">
    <nav class="navbar-default navbar-static-side" role="navigation">
      <div class="sidebar-collapse">
        <ul class="nav metismenu" id="side-menu">
          <li class="nav-header">
            <div class="dropdown profile-element">
              <span>
                <i class="fa fa-user fa-5x"></i>
              </span>
              <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                <span class="clear"> <span class="block m-t-xs">
                  <ul class="dropdown-menu animated fadeInRight m-t-xs">
                    <li><%= link_to 'Logout' , method: :delete %></li>
                  </ul>
              </div>
              <div class="hr-line-dashed"></div>
              <div class="logo-element">
                IN+
              </div>
            </li>
              <li>
                <%= link_to '<i class="fa fa-th-large"></i> Dashboard'.html_safe , dashboards_path  ,class: 'nav-label' %>
              </li>
              <li>
                <%= link_to '<i class="fa fa-clipboard"></i>ป.143'.html_safe , papers_path ,class: 'nav-label' %>
              </li>
              <li>
                <%= link_to '<i class="fa fa-users"></i>รายชื่อพนักงาน'.html_safe , staffs_path , class: 'nav-label' %>
              </li>
              <li>
                <%= link_to '<i class="fa fa-bar-chart-o"></i>รายงาน'.html_safe , class: 'nav-label'%>
              </li>
              <li>
                <%= link_to '<i class="fa fa-trophy"></i>กระดานผู้นำ'.html_safe , leaderboards_path , class: 'nav-label' %>
              </li>
              <li>
                <%= link_to '<i class="fa fa-question"></i>วิธีการใช้งาน (FAQ)'.html_safe , class: 'nav-label'%>
              </li>
          </ul>
      </div>
    </nav>
      <div id="page-wrapper" class="gray-bg">
        <div class="row border-bottom">
          <nav class="navbar navbar-static-top  " role="navigation" style="margin-bottom: 0">
            <!-- ด้านบนหัวสุดเลยสัส -->
          </nav>
        </div>
        <div class="wrapper wrapper-content animated fadeInDown">
          <%= yield %>
        </div>
        <div class="footer">
          <div class="pull-right">
            <a href="https://github.com/game1095/postapp"><strong>เข้ามารับชมความกากได้ที่ลิ้งนี้</strong></a>
          </div>
          <div>
            Make with <i class="fa fa-heart-o"></i> by Megamind
          </div>
        </div>
      </div>
    </div>
  </body>
  </html>
