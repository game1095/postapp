<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>เพิ่มพนักงาน</h5>
      </div>
      <div class="ibox-tools">

      </div>
      <div class="ibox-content">
        <%= form_for @staff do |form| %>
         <div class="form-group">
           <%= form.label :ชื่อ_นามสกุล , class:'control-label' %>
           <%= form.text_field :name , class: 'form-control'%>
         </div>

        <div class="hr-line-dashed"></div>
         <div class="form-group">

           <%= form.label :เพศ , class:'control-label' %>
           <%= form.collection_select(:gender_id , Gender.all , :id , :name,{prompt: 'โปรดระบุเพศ'} ,required: true , class: 'form-control') %>
         </div>

         <div class="form-group">
           <%= form.label :แผนก , class:'control-label' %>
           <%= form.collection_select(:department_id , Department.all , :id , :name,{prompt: 'โปรดระบุแผนก'} , required: true , class: 'form-control')%>
         </div>

         <div class="form-group">
           <%= form.label :ตำแหน่ง , class:'control-label' %>
           <%= form.collection_select(:position_id , Position.all , :id , :name , {prompt: 'โปรดระบุตำแหน่ง'} , required: true , class: 'form-control') %>
         </div>

         <div class="form-group">
           <%= form.label :ที่อยู่ , class:'control-label' %>
           <%= form.text_area :address , class:'form-control' %>
         </div>

         <div class="form-group">
           <%= form.label :หมายเลขโทรศัพท์ ,class:'control-label' %>
           <%= form.text_field :tel , class:'form-control' %>
         </div>

         <div class="form-group">
           <%= form.label :อีเมล์ , class:'control-label' %>
           <%= form.email_field :email , class:'form-control' %>
         </div>

         <div class="hr-line-dashed"></div>
         <div class="row">
           <div class="col-lg-12">
             <div class="form-group">
               <%= form.submit 'บันทึกผล' , class: 'btn btn-primary btn-rounded btn-block' %>
             </div>
           </div>
           <div class="col-lg-12">
             <div class="form-group">
               <%= link_to 'ย้อนกลับ' , staffs_path , class:'btn btn-warning btn-rounded btn-block' %>
             </div>
           </div>
         </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
