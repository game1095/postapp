<h1>หน้าแรก</h1>
<div class="row">
  <div class="col-md-12">
    <% if flash[:notice] %>
    <div class="notice alert alert-info alert-dismissable"><%= flash[:notice] %></div>
    <% end %>
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>รายชื่อพนักงาน</h5>
        <div class="ibox-tools">
          <%= link_to new_staff_path , class: 'btn btn-primary dim' do %>
            <i class='fa fa-plus'></i>
          <% end %>
        </div>
      </div>
      <div class="ibox-content">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>ชื่อ - นามสกุล</th>
              <th>เพศ</th>
              <th>ตำแหน่ง</th>
              <th>แผนก</th>
              <th><i class="fa fa-gears"></i></th>
            </tr>
          </thead>
          <tbody>
            <% @staffs.each do |staff| %>
              <tr>
                <td><%= staff.id %></td>
                <td><%= staff.name %> </td>
                <td><%= staff.gender.name %></td>
                <td>.......</td>
                <td><%= staff.department.name %></td>
                <td>
                  <%= link_to  staff_path(staff.id) , class: 'btn btn-primary btn-circle' do %>
                    <i class="fa fa-info-circle" ></i>
                  <% end %>
                  <%= link_to  edit_staff_path(staff.id) , class: 'btn btn-success btn-circle' do %>
                    <i class="fa fa-edit" ></i>
                  <% end %>
                  <%= link_to staff_path(staff.id) , method: :delete   , class: 'btn btn-danger btn-circle' do %>
                    <i class="fa fa-trash-o"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>
